<div class="header">
  <div class="container">
    <%= image_tag("setuserv.png", :alt => "Setu Serv") %>
    <h1>Messenger</h1>
  </div>
</div>

<div class="messages">
  <div class="container">
<% if @messages %>    
<% @messages.each do |message| %> 
<div class="message"> 
  <p class="content"><b><%= User.find(message.user_id).first_name %></b>: <%= message.content %></p> 
  <p class="time"><%= message.created_at %></p> 
</div> 
<% end %>
<% end %>

<%= will_paginate @messages, :class => 'flickr_pagination' %>

    <%= link_to 'New Message', "messages/new" %>
    <%= link_to "Log out", logout_path, method: "delete" %>
    <br><br>logged in as <%= current_user.email %><br>
    
  </div>
</div>
