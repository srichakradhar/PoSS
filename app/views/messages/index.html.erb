<div class="header">
  <div class="container">
    <%= image_tag("setuserv.png", :alt => "Setu Serv") %>
    <h1>Messenger</h1>
  </div>
</div>

<div class="messages">
  <div class="container">
    
<% @messages.reverse_each do |message| %> 
<div class="message"> 
  <p class="content"><b><%= message.name %></b>: <%= message.content %></p> 
  <p class="time"><%= message.created_at %></p> 
</div> 
<% end %>

    <%= link_to 'New Message', "messages/new" %>
    
  </div>
</div>
